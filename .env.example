# 环境配置示例文件
# 复制此文件为 .env 并根据实际环境修改配置

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=risk_warning_platform
DB_USERNAME=postgres
DB_PASSWORD=password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch配置
ES_HOST=localhost
ES_PORT=9200

# Kafka配置
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Nacos配置
NACOS_SERVER_ADDR=localhost:8848

# JWT配置
JWT_SECRET=risk-warning-platform-jwt-secret-key-2023
JWT_EXPIRATION=86400

# 邮件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Milvus配置
MILVUS_HOST=localhost
MILVUS_PORT=19530

# 文件上传配置
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=50MB

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=./logs
